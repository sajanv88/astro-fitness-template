---
import Link from "./link.astro";
const navs = [
  { text: "home", href: "/" },
  { text: "about", href: "/about" },
  { text: "pricing", href: "/pricing" },
  { text: "services", href: "/services" },
  { text: "contact", href: "/contact" },
];
---

<section role="region" aria-labelledby="quick-links" class="pt-3 md:pt-0">
  <div
    id="quick-links"
    class="flex flex-col w-full items-center md:items-start"
  >
    <h2 class="uppercase font-bold text-xl leading-8 pb-3 truncate">
      Quick Links
    </h2>
    <nav class="space-y-2 flex flex-col">
      {
        navs.map((nav) => (
          <Link
            to={nav.href}
            className="md:px-0 md:pl-0 py-0 lg:px-0 md:text-md lg:text-md"
          >
            {nav.text}
          </Link>
        ))
      }
    </nav>
  </div>
</section>
