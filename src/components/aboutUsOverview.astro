---
import Numbers from "./numbers.astro";
import { cn } from "../utils";
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div
  class={cn(
    "px-5 w-full text-center md:text-left md:bg-transparent md:px-10 space-y-2",
    className,
  )}
>
  <h2 class="text-2xl lg:text-4xl font-extrabold text-primary-content">
    About Us
  </h2>
  <p
    class="w-full text-md md:text-xl text-accent-content uppercase md:max-w-md"
  >
    Welcome to the world of fitness We are here to help you achieve
  </p>
  <p class="w-full md:max-w-md text-sm md:text-md">
    Euis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore
    eu fugiat nulla pariatur ex sint occaecat cupidatat non proident, sunt in
    cular aui officia deserunt mollit anim laborum.
  </p>
  <div class="md:pt-5 grid md:grid-cols-2 gap-2">
    <Numbers title="600K+" subtitle="Working Hours" />
    <Numbers title="790+" subtitle="Success Program" />
    <Numbers title="2,560+" subtitle="Happy Clients" />
    <Numbers title="830+" subtitle="Perfect Bodies" />
  </div>
  <div class="flex justify-center pt-5">
    <button
      class="text-md md:text-lg bg-accent hover:bg-accent/90 text-accent-content uppercase px-5 py-1 md:py-2 uppercas transition duration-300 ease-in-out"
    >
      Read More
    </button>
  </div>
</div>
