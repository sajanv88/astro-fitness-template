---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<div class="flex flex-col w-full">
  <span
    class="text-xl text-secondary-content md:text-accent font-extrabold md:text-2xl lg:text-4xl uppercase"
  >
    {title}
  </span>
  <span class="uppercase font-extrabold text-md md:text-lg">{subtitle}</span>
</div>
